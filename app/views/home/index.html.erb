<% if signed_in? %>
  <table class="front round" summary="For signed-in users">
    <tr>
      <td class="main round">
        <h1 class="micropost"><%= current_user.name%>¿Que ha pasado hoy?</h1>
        <%= render 'shared/micropost_form' %>
		<%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
		<%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Micropost</h1>

  <p>
    Aplicación de Microposts, basado en el tutorial de
    <a href="http://railstutorial.org/chapters/user-microposts#top" target="_blank">Ruby on Rails Tutorial Book</a>
    .
  </p>
  <%=  link_to image_tag("boton.jpeg", :width=>"auto",:height=>"auto",:class =>"round",:align=>'center',:valign=>'center'),signup_path,:class => "signup_button round" %>
<% end %>
