<h1>Registro.!!</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
	<%= f.label :nombre %><br />
	<%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :email %><br />
	<%= f.text_field :email %>
  </div>
  <div class="field">
	<%= f.label :contraseña %><br />
	<%= f.password_field :password %>
  </div>
  <div class="field">
	<%= f.label :password_confirmation, "Confirmación de Contraseña"  %><br />
	<%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
	<%= f.submit "Registrate" %>
  </div>
<% end %>	
