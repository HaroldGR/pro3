<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <% if signed_in? %>
      <li><%= link_to "Micropost", root_path %></li>
      <% else %>
      <li><%= link_to "Home", root_path %></li>
      <% end %>
      <% if signed_in? %>
 	  <li><%= link_to "Usuarios", users_path %></li>
      <li><%= link_to "Perfil", current_user %></li>
	  <li><%= link_to "Editar Perfil", edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to "Ayuda", help_path %></li>
      <% if signed_in? %>
      <h6>Sesión: <%=  current_user.name %> - <%=  current_user.email %></h6>
      <li><%= link_to "Cerrar sesión", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Ingresar", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
